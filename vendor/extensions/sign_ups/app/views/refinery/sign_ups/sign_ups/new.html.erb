<div class="row signup-container">
    <div class="container">

<% content_for :body do %>
  <div class='sign_ups'>
    <%=raw @page.content_for(Refinery::Pages.default_parts.first.to_sym) %>

    <%= form_for [refinery, :sign_ups, @sign_up] do |f| %>
      <%= render '/refinery/admin/error_messages',
                 :object => @sign_up,
                 :include_object_name => true  %>

      <div class='field name_field string_field'>
        <ul>
          <li><%= f.required_label :name %></li>
          <li><%= f.text_field :name , :class=>"signup-form-input" , :required => 'required'%></li>
        </ul>
      </div>

      <div class='field email_field string_field'>
        <ul>
          <li><%= f.required_label :email %></li>
          <li><%= f.email_field :email, :class=>"signup-form-input" , :required => 'required' %></li>
        </ul>
      </div>

      <div class='field country_field string_field'>
        <ul>
          <li><%= f.required_label :country %></li>
          <li><%= f.text_field :country, :class=>"signup-form-input" , :onKeyPress => "return TextCharKeyPress(event);" , :MaxLength=> 25 , :required => 'required'%></li>
        </ul>
      </div>

      <div class='field city_field string_field'>
        <ul>
          <li><%= f.required_label :city %></li>
          <li><%= f.text_field :city, :class=>"signup-form-input" , :onKeyPress => "return TextCharKeyPress(event);" , :MaxLength=> 25 , :required => 'required'%></li>
        </ul>
      </div>

      <div class='field occupation_field string_field'>
        <ul>
          <li><%= f.required_label :occupation %></li>
          <li> <select name="sign_up[occupation]" required>
              <option value="">Choose One</option>
              <option value="Student">Student</option>
              <option value="Entrepreneur">Entrepreneur</option>
              <option value="Working Professional">Working Professional</option>
              <option value="Not working currently">Not working currently</option>
              <option value="Others">Others</option>
            </select>
<%#= f.select :occupation, options_for_select(["Student", "Entrepreneur", "Working Professional", "Not working currently", "Others"]), :prompt => "Select one" , :class => 'genForm_dropBox'%></li>
          
        </ul>
      </div>
      <div class='field message_field text_field'>  
          <span class="webinar">How did you hear about the Webinar?</span>
      </div>
      <div class='field occupation_field string_field'>
        <ul>
          <li><%= f.required_label :source %></li>
          <li><select name="sign_up[source_from]" required>
              <option value="">Choose One</option>
              <option value="I am a participant of the MOOC">I am a participant of the MOOC</option>
              <option value="Through Facebook">Through Facebook</option>
              <option value="Through Twitter">Through Twitter</option>
              <option value="Through Linkedin">Through Linkedin</option>
              <option value="Through a friend or acquaintance">Through a friend or acquaintance</option>
              <option value="Through Shopify email">Through Shopify email</option>
              <option value="Through Quora">Through Quora</option>
            </select>
            
<%#= f.select :source_from, options_for_select(["I am a participant of the MOOC", "Through Facebook", "Through Twitter", "Through Linkedin", "Through a friend or acquaintance"]), :class => 'genForm_dropBox' %></li>
        </ul>
      </div>     
      <div class='field message_field text_field'>  
          <span class="webinar">I want to attend the webinar because:</span>
      </div>
      <div class='field message_field text_field'>
       <ul>
          <li><%= f.label :message %></li>
          <li>
              <%= f.text_area :message, :rows => 8, :class=>"signup-form-txt-area" %>
          </li>
        </ul>
      </div>

      <div class='actions'>
        <%= f.submit t('.send') , :style =>"color:#fff;" %>
      </div>
    <% end %>
  </div>
<% end %>
<%= render '/refinery/content_page' %>
  </div>
</div>

