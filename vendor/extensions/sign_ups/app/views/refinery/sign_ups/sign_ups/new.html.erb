<% content_for :body do %>
  <div class='sign_ups'>
    <%=raw @page.content_for(Refinery::Pages.default_parts.first.to_sym) %>

    <%= form_for [refinery, :sign_ups, @sign_up] do |f| %>
      <%= render '/refinery/admin/error_messages',
                 :object => @sign_up,
                 :include_object_name => true  %>

      <div class='field name_field string_field'>
        <%= f.required_label :name %>
        <%= f.text_field :name %>
      </div>

      <div class='field email_field string_field'>
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>

      <div class='field country_field string_field'>
        <%= f.label :country %>
        <%= f.text_field :country %>
      </div>

      <div class='field city_field string_field'>
        <%= f.label :city %>
        <%= f.text_field :city %>
      </div>

      <div class='field occupation_field string_field'>
        <%= f.label :occupation %>
        <%= f.select :occupation, options_for_select(["Student", "Entrepreneur", "Working Professional", "Not working currently", "Others"]), :class => 'genForm_dropBox' %>
      </div>

      <div class='field message_field text_field'>
        <%= f.label :message %>
        <%= f.text_area :message, :rows => 8 %>
      </div>

      <div class='actions'>
        <%= f.submit t('.send') %>
      </div>
    <% end %>
  </div>
<% end %>
<%= render '/refinery/content_page' %>
